    "version": "0.2.0",
    "configurations": [
        {
            "name": "macOS: clang build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/output/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/output/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "macOS Build & Debug"
        },
        {
            "name": "Windows - Build and debug active file",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/output/",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Windows Build & Debug",
            "requireExactSource": false // this allows debugging
        }
    ]
}